[Unit]
Description=Live Audio Spectrogram Service
After=network.target

[Service]
Type=simple
User=user
Group=audio
WorkingDirectory=/home/spectro
Environment=PYTHONPATH=/home/spectro
ExecStart=/home/spectro/venv/bin/gunicorn --bind 0.0.0.0:5000 app:app --access-logfile /var/log/spectrogram/access.log --error-logfile /var/log/spectrogram/error.log
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target